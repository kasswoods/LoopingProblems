        static void Main(string[] args)  //main method where we input our string  
        { 
            //reverse in method  

            List<int> aNew = ReverseAndNot("1234"); 

            Console.WriteLine(string.Join("", aNew)); 
 
            //smooth sentences  

            Console.WriteLine(SmoothSentence("amazing games sound delightful")); 

            //duplicate count  

            DuplicateCount("irreversable"); 

